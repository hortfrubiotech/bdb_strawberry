#!/usr/bin/perl -w
#retrieving.pl
use DBI;
use DBD::mysql;
use strict;
use DBIx::Dump;

my @data = ();
my @name = ();
my $id = ();
my $value = ();
my $format = 'csv';
my $filename = 'dbxi.csv';
my $sth_data = ();
my $ds = "DBI:mysql:proyecto_fresas:localhost";
my $user_sql = "hugo";
my $passwd = "532anion++";
my $dbh = DBI->connect($ds,$user_sql,$passwd) || die "Can't connect!"; 
my $sth_name = $dbh->prepare("SELECT germplasm.name, firmness.value FROM firmness, germplasm
"); 
$sth_name->execute();

my $out = DBIx::Dump->new();

$out->dump('format' => 'csv', 'output' => 'db.csv', 'sth' => $sth_name);


$dbh->disconnect;
